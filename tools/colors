function randate {
  date -d "$((RANDOM%1+2014))-$((RANDOM%12+1))-$((RANDOM%28+1)) $((RANDOM%23+1)):$((RANDOM%59+1)):$((RANDOM%59+1))" '+%Y-%m-%d %H:%M:%S';
}

# POSTS

posts=( 'You think Im an ignorant savage'                        \
        'And youve been so many places'                          \
        'I guess it must be so'                                  \
        'But still I cannot see'                                 \
        'If the savage one is me'                                \
        'How can there be so much that you dont know'            \
        'You dont know'                                          \

        'You think you own whatever land you land on'            \
        'The Earth is just a dead thing you can claim'           \
        'But I know every rock and tree and creature'            \
        'Has a life, has a spirit, has a name'                   \

        'You think the only people who are people'               \
        'Are the people who look and think like you'             \
        'But if you walk the footsteps of a stranger'            \
        'Youll learn things you never knew, you never knew'      \

        'Have you ever heard the wolf cry to the blue corn moon' \
        'Or asked the grinning bobcat why he grinned'            \
        'Can you sing with all the voices of the mountains'      \
        'Can you paint with all the colors of the wind'          )

for i in "${posts[@]}"
do
  id=$(wp post create --post_title="${i}" --post_date="$(randate)" --post_status="Publish" --porcelain)

  wget http://lorempixel.com/400/400/ -O images/${id}_image.jpg
  wp media import images/${id}_image.jpg --post_id=$id --title="${i}" --featured_image
done


# SWATCHES
# https://en.wikipedia.org/wiki/List_of_colors:_A%E2%80%93F

swatches=( 'Absolute Zero' 'Aero' 'Almond' 'Amazon' 'Amber' 'Antique Ruby' 'Barn Red' 'Bazaar'      \
           'Bdazzled Blue' 'Black Olive' 'Blue' 'Blush' 'Bright Lilac' 'Bubble Gum' 'Byzantium'     \
           'Canary Yellow' 'Candy Apple Red' 'Caribbean Green' 'Carrot Orange' 'Cerise' 'Cherry'    \
           'Chestnut' 'Congo Pink' 'Cherry' 'Coquelicot' 'Cordovan' 'Crimson' 'Cyber Yellow'        \
           'Daffodil' 'Dark Lava' 'Deep Champagne' 'Desert' 'Dollar Bill' 'Drab' 'Ecru' 'Eggplant'  \
           'Electric Ultramarine' 'Emerald' 'Eminence' 'Eton Blue' 'Falu Red' 'Fandango' 'Feldgrau' )

for i in "${swatches[@]}"
do
  wp post create --post_title="${i}" --post_type="swatches" --post_date="$(randate)" --post_status="Publish"
done


# Cities (Probably based on Pokemon Cities, which are based on colors)
# http://bulbapedia.bulbagarden.net/wiki/List_of_cities_and_towns

cities=( 'Celadon City' 'Cerulean City' 'Cinnabar Island' 'Fuchsia City' 'Lavendar Town' \
         'Pallet Town' 'Pewter City' 'Saffron City' 'Vermilion City' 'Viridian City'     )

for i in "${cities[@]}"
do
  wp post create --post_title="${i}" --post_type="cities" --post_date="$(randate)" --post_status="Publish"
done


# CRAYONS
# https://en.wikipedia.org/wiki/List_of_Crayola_crayon_colors

crayons=( 'Maximum Red' 'Light Venetian Red' 'Macaroni and Cheese' 'Mango Tango' 'Goldenrod'  \
          'Maximum Yellow' 'Inchworm' 'Fern' 'Shamrock' 'Tropical Rain Forest' 'Outer Space' \
          'Pacific Blue' 'Cornflower' 'Denim' 'Indigo' 'Royal Purple' 'Brilliant Rose'       )

for i in "${crayons[@]}"
do
  wp post create --post_title="${i}" --post_type="crayons" --post_date="$(randate)" --post_status="Publish"
done


# MEDIA
# http://lorempixel.com/400/400/

if [ ! -d "images" ]; then
  mkdir images
fi

for ((i=1;i<=50;i++));
do
  wget http://lorempixel.com/400/400/ -O images/$i.jpg
  wp media import images/$i.jpg
done